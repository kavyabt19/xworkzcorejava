package com.xworkz.curd_operation;

public class Waterfalls {

	private String name;
	private String location = new String();
	private String[] waterfalls = new String[5];
	private int counter;

	public Waterfalls() {

		this("Hebbe ");
		System.out.println("Invoked default Restaurant");

	}

	public String getLocation() {
		return location;
	}

	public Waterfalls(String location) {

		System.out.println("Invoked default Restaurant");
		this.location = location;

	}

	public void addWaterfalls(String name) {

		System.out.println(" invoked addWaterfalls");
		System.out.println(" name ".concat(name));
		if (this.counter < 5) {

			this.waterfalls[this.counter] = name;
			this.counter++;

		} else {

			System.err.println("array is full");
		}
	}

	public void displayWaterfalls() {

		System.out.println("invoked displayWaterfalls");
		for (int i = 0; i < this.waterfalls.length; i++) {
			String name1 = this.waterfalls[i];
			System.out.println(name1);
		}

	}

}
